<h1>Shopping List</h1>
<div ng-controller="ItemsController as ItemsCtrl">
  <form>
    <input type="text" ng-model='ItemsCtrl.name' placeholder='Enter an item'>
    <input type="submit" value="Add">
  </form>
  <ol>
    <li ng-repeat="item in ItemsCtrl.items">
      {{item.name}}, {{item.quantity}}
      <a href="" ng-click="ItemsCtrl.deleteItem(item.id, $index)">Delete</a>
    </li>
  </ol>
</div>
