<div ng-controller="SessionsController as session">
  <h1>hiku</h1>
  <form ng-submit="session.login()" ng-hide="session.loggedIn">
    <h1>Log In</h1>
    <div ng-show="session.error">
        There was a problem contacting the server. Please try again.
    </div>
    <input type="text" ng-model='session.email' placeholder='JohnDoe@Gmail.com'>
    <input type="password" ng-model='session.password' placeholder='$ecret'>
    <input type="submit" value="Log In">
  </form>

  <div ng-controller="ItemsController as ItemsCtrl" ng-show="session.loggedIn">
    <h1>Shopping List</h1>
    <form ng-submit="ItemsCtrl.createItem()">
      <input type="text" ng-model='ItemsCtrl.name' placeholder='Enter an item'>
      <input type="integer" ng-model='ItemsCtrl.quantity' placeholder='Quantity'>
      <input type="submit" value="Add">
    </form>
    <ol>
      <li ng-repeat="item in ItemsCtrl.items">
        {{item.name}}, {{item.quantity}}
        <a href="" ng-click="ItemsCtrl.deleteItem(item.id, $index)">Delete</a>
      </li>
    </ol>
  </div>
</div>
